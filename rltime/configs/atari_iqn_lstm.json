{
    "acting" : {        
        "actor_envs" : 32,
        "exploration" : "@json('exploration/decay_0.01_5p.json')"       
    },
    "model" : "@json('models/nature_cnn_lstm512_fc512.json')",         
    "env_args" : {
        "wrappers" : "@json('env_wrappers/atari_lstm.json')",
        "max_episode_steps" : 108000
    },
    "policy_args" : {        
        "dueling" : true,
        "embedding_dim" : 64,
        "num_sampling_quantiles" : 8,
        "injection_layer" : 1
    },
    "training" : {
        "type" : "iqn",
        "args" : {
            "clip_rewards" : true,
            "vf_scale_epsilon" : null,
            "gamma" : 0.99,
            "mbatch_size" : 32,
            "nstep_train" : 20,
            "nstep_target" : 3,
            "lr" : 2.5e-4,            
            "lr_anneal" : true,            
            "adam_epsilon" : 1e-5,
            "double_q" : true,
            "rnn_bootstrap" : true,
            "clip_grad" : 40.0,
            "target_update_freq" : 20000,
            "total_steps" : 50000000,
            "warmup_steps" : 50000,
            "history_mode" : {
                "type" : "prioritized_replay",
                "args" : {
                    "size" : 1000000,
                    "train_frequency" : 4
                }
            }     
        }
    }
}